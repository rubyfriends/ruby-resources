!!!
%html
  %head
    %title Ruby Resources
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    %p.flash
      = flash[:message]
    = yield
    %hr
    - if logged_in?
      = "Logged in as #{current_user.username}"
      = link_to "(logout)", logout_path
    - else
      = link_to "(login)", login_path
      Logged out
